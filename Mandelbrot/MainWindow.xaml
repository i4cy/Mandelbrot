<!-- Fast Mandelbrot Rendering with GPU in C# -->
<!-- Guy Fernando - i4cy (2024) -->
<Window x:Class="Mandelbrot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GPU Mandelbrot Set Generator" Width="1024" Height="768">
    
    <DockPanel>
        <!-- Status Bar at the bottom -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Guy Fernando (i4cy.com) 2024." />
            </StatusBarItem>
            <StatusBarItem>
                <StackPanel Width="150" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="CenterXText" Text="Center X: 0.0" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="CenterYText" Text="Center Y: 0.0" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="ZoomFactorText" Text="Zoom: 1.00E+0" />
            </StatusBarItem>
        </StatusBar>

        <!-- Mandelbrot Set Image -->
        <Image Name="MandelbrotImage" Stretch="None" Margin="0,0,0,20"/>
    </DockPanel>

</Window>

